{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@theme": ["./src/theme"],
      "@theme/*": ["./src/theme/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    },
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsxImportSource": "@emotion/react"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
